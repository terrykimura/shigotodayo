<%= form_for(@job) do |f| %>
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <td>会社名</td>
            <td><%= f.text_field :companyread, :class => "form-control" %><br><%= f.text_field :company, :class => "form-control" %></td>
        </tr>
        <tr>
            <td>募集職種</td>
            <td><%= f.text_field :name, :class => "form-control" %></td>
        </tr>
        <tr>
            <td>募集人数</td>
            <td><%= f.text_field :number, :class => "form-control" %></td>
        </tr>
        <tr>
            <td>業務内容</td>
            <td><%= f.text_area :description, :class => "form-control" %></td>
        </tr>
        <tr>
            <td>求めるスキル・経験・経歴</td>
            <td><%= f.text_area :requiredskills, :class => "form-control" %></td>
        </tr>
        <tr>
            <td>雇用形態</td>
            <td><%= select_tag(:type, options_for_select([['正社員', 0], ['契約社員', 1], ['派遣社員', 2], ['アルバイト', 3], ['委託', 4]]), :class => "form-control") %></td>
        </tr>
        <tr>
            <td>給与条件</td>
            <td><%= f.text_field :salary, :class => "form-control" %></td>
        </tr>
        <tr>
            <td>勤務時間</td>
            <td><%= f.text_field :hours, :class => "form-control" %><br><%= f.radio_button :worktype,0 %>フルタイム<%= f.radio_button :worktype,1 %>パートタイム</td>
        </tr>
        <tr>
            <td>残業</td>
            <td><%= f.text_field :overtime, :class => "form-control" %></td>
        </tr>
        <tr>
            <td>休日・休暇</td>
            <td><%= f.text_field :holidays, :class => "form-control" %></td>
        </tr>
        <tr>
            <td>福利厚生</td>
            <td><%= f.text_field :welfare, :class => "form-control" %></td>
        </tr>
        <tr>
            <td>勤務地住所</td>
            <td><%= f.text_field :address, :class => "form-control" %></td>
        </tr>
        <tr>
            <td>ビザサポート</td>
            <td><%= f.radio_button :visasupport,0 %>無<%= f.radio_button :visasupport,1 %>有</td>
        </tr>
        <tr>
            <td>最寄り駅</td>
            <td>路線: <%= f.text_field :stationline, :class => "form-control" %><br>駅名: <%= f.text_field :station, :class => "form-control" %></td>
        </tr>
    </table>

    <%= f.submit :class => "btn btn-block btn-lg btn-primary" %>

<% end %>