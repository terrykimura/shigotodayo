<h1>全募集職欄</h1>

<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>会社名</th>
        <th>募集職種</th>
        <th>最寄り駅</th>
        <th>編集</th>
    </tr>
    <% @jobs.each do |job| %>
    <tr>
        <td></td>
        <td><%= job.name %></td>
        <td><%= job.station %></td>
        <td><%= link_to "編集" , edit_job_path(job) %> <%= link_to "削除" , job , method: :delete, data: { confirm: '削除しますよ？！' } %></td>
    </tr>
    <% end %>
</table>

<%= render 'form' %>