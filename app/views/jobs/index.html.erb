<h1>全募集職欄</h1>

<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>会社名</th>
        <th>募集職種</th>
        <th>募集人数</th>
        <th>雇用形態</th>
        <th>給与条件</th>
        <th>勤務時間</th>
        <th>最寄り駅</th>
    </tr>
    <% @jobs.each do |job| %>
    <tr data-link="<%= job_path(job) %>" style="cursor:pointer;">
        <td><%= job.companyread %><br><%= job.company %></td>
        <td><%= job.name %></td>
        <td><%= job.number %></td>
        <td>
            <% if job.employmenttype == 0 %>
            <% elsif job.employmenttype == 1 %>
                正社員
            <% elsif job.employmenttype == 2 %>
                契約社員
            <% elsif job.employmenttype == 3 %>
                派遣社員
            <% elsif job.employmenttype == 4 %>
                アルバイト
            <% elsif job.employmenttype == 5 %>
                委託
            <% else %>
                (未登録)
            <% end %>
        </td>
        <td><%= job.salary %></td>
        <td><%= job.hours %></td>
        <td><%= job.stationline %><br><%= job.station %></td>
    </tr>
    <% end %>
</table>

<%= render 'form' %>